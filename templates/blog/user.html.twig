{% extends 'base.html.twig' %}

{% block body %}
<table class="table table-bordered table-streaped mt-4">
    <tr>
        <th>nom d utilisateur</th>
        <th>email</th>
        <th>password</th>
        <th>roles</th>
        <th>update</th>
        <th>delete</th>
    </tr>
    {% for user in users %}
        <tr>
            <td> {{user.username}} </td>
            <td> {{user.email}} </td>
            <td> {{user.password}} </td>
               <td>
            {% for role in user.roles %}
            {% if role=='ROLE_USER' %}
                Utilisateur
            {% elseif role=='ROLE_ADMIN' %}
               Administrateur
            {% else %}
               Editeur
            {% endif %}
            {% endfor %}
               </td>
            <td><a href="{{path('updateUser',{'id':user.id})}}" class="btn btn-info">update</a></td>
            <td><a href="{{path('deleteUser',{'id':user.id})}}" class="btn btn-danger">delete</a></td>
        </tr>
    {% endfor %}
</table>
{% endblock %}